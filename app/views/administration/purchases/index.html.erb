<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Amount</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.id %></td>
        <td><%= purchase.amount %></td>
        <td><%= purchase.created_at %></td>
        <td><%= purchase.updated_at %></td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
    <% end %>
  </tbody>
</table>