<%= form_for [:administration, @user] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/><br/>

  <%= f.label :surname %>
  <%= f.text_field :surname %>
  <br/><br/>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <br/><br/>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br/><br/>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br/><br/>

  <%= f.submit :create %>
<% end %>
