  <br/><br/>

  <%= f.label :price_reduce_pace %>
  <%= f.text_field :price_reduce_pace %> (seconds)
  <br/><br/>

  <%= f.label           :start_datetime %>
  <%= f.datetime_select :start_datetime %>
  <br/><br/>

  <%= f.submit :create %>
<% end %>
