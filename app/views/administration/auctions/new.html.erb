<%= form_for [:administration, @auction] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/><br/>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br/><br/>

  <%= f.label :start_price %>
  <%= f.text_field :start_price %>
  <br/><br/>

  <%= f.label :end_price %>
  <%= f.text_field :end_price %>
  <br/><br/>

  <%= f.label :store_price %>
  <%= f.text_field :store_price %>
  <br/><br/>

  <%= f.label :start_quantity %>
  <%= f.text_field :start_quantity %>
  <br/><br/>

  <%= f.label :minimum_users_per_product %>
  <%= f.text_field :minimum_users_per_product %>
  <br/><br/>

  <%= f.label :maximum_users_per_product %>
  <%= f.text_field :maximum_users_per_product %>
  <br/><br/>

  <%= f.label :time_for_purchase %>
  <%= f.text_field :time_for_purchase %> (seconds)
  <br/><br/>

  <%= f.label :active_users_timeout %>
  <%= f.text_field :active_users_timeout %> (seconds)
  <br/><br/>

  <%= f.label :price_reduce_amount %>
